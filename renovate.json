{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "gradle",
    "github-actions"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "org.jetbrains.intellij"
      ],
      "groupName": "IntelliJ Platform dependencies"
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "groupName": "Gradle Wrapper updates"
    }
  ]
}
